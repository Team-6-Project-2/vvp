<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">
                    Viktoriia's Vaxx Passport Report for {{first_name}} {{last_name}} ({{vvp_number}})
                </h5>
                <div class="card-body">
                    <p class="card-text">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Date
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each vaxxes as |vaxx|}}
                            <tr>
                                <td>
                                    {{vaxx.vaxx_name}}
                                </td>
                                <td>
                                    {{vaxx.description}}
                                </td>
                                <td>
                                    {{vaxx.date_created}}
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </p>
    </div>
    <div class="card-footer">
        For more information about the Viktoriias Vaxx Passport head over to www.viktoriiasvaxxpassport.com
    </div>
</div>